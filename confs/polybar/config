[module/bat]
type = custom/script
exec = /home/zoe/proj/shell/bat/polybat
tail = true
interval = .5
format =  "%{T2}%{T4}<label>"

format-background = ${colors.background}
format-foreground = ${colors.gold}
format-padding = 4
format-prefix-foreground = ${colors.foreground-alt}

[module/mpcstat]
type = custom/script
exec = /home/zoe/PATHcustom/mpcstat
tail = true
interval = 3

format-background = ${colors.green}
format-foreground = ${colors.background}
format-padding = 4
format-prefix-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
format-online = "%{T2}<label-song>  %{F#FF5C57}%{T2}<icon-prev> %{T2}%{F#FFB526}<toggle> %{T2}%{F#FF5C57}<icon-next>   "

port = 6600

icon-prev = <¬´
icon-stop = ¬ª>	
icon-play = ‚úñ
icon-pause = >
icon-next = ¬ª>	
